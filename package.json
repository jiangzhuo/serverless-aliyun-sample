{
  "name": "nest-serverless",
  "version": "0.0.0",
  "description": "serverless app",
  "author": "ouistiti-dev",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json;cp -fr src/**/*.graphqls dist/**/;",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "sls offline start",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.2.2",
    "@nestjs/core": "^6.2.2",
    "@nestjs/graphql": "^6.2.1",
    "@nestjs/platform-express": "^6.2.2",
    "ali-oss": "^6.1.1",
    "apollo-server-express": "^2.5.0",
    "aws-serverless-express": "^3.3.6",
    "busboy": "^0.3.1",
    "express": "^4.17.0",
    "graphql": "^14.3.0",
    "graphql-tools": "^4.0.4",
    "hasha": "^5.0.0",
    "mime": "^2.4.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "rxjs": "^6.5.2",
    "serverless-aliyun-function-compute": "^1.2.1",
    "serverless-plugin-typescript": "^1.1.7",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.2.2",
    "@types/aws-lambda": "^8.10.25",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/supertest": "^2.0.5",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.1",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-optimize": "^4.0.2-rc.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.1",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.16.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
